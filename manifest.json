{
  "name": "LinkedIn Profile Visibility Swithcer",
  "description": "Change profile visibility right from the top navigation bar.",
  "manifest_version": 3,
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["scripts/contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "cookies"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
